<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.memo.post.mapper.PostMapper">
    <select id="selectPostListTest" resultType="map">
        SELECT
            *
        FROM
            `post`
    </select>

    <select id="selectPostListByUserId" parameterType="int">
        SELECT
            `id`
            ,`userId`
            ,`subject`
            ,`content`
            ,`imagePath`
            ,`createdAt`
            ,`updatedAt`
        FROM
            `post`
        WHERE
            `userId` = #{userId}
    </select>

    <insert id="" parameterType="com.memo.post.domain.Post">
        INSERT INTO `post`
        (
            `userId`
            , `subject`
            , `content`
            , `imagePath`
        )
        VALUES
        (
            #{userId}
            , #{subject}
            , #{content}
            , #{imagePath}
        )
    </insert>
</mapper>